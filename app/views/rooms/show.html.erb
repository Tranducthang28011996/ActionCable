<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <h1>welcome my room-<%= @room.id %></h1>
  </div>
  <div class="col-md-6 col-md-offset-3 text-center">
    <hr>
  </div>
  <div class="col-md-6 col-md-offset-3 pre-scrollable" id="room-<%= @room.id %>">
    <div  id="messages" data-room="<%= @room.id %>">
      <%= render @room.messages %>
    </div>
  </div>
  <div class="col-md-6 col-md-offset-3 text-center">
    <div class="form-group">
      <%= form_for [@room, @room.messages.build] do |f| %>
        <%= f.text_area :content, rows: 2, cols: 60, class: "form-add-comment",
          placeholder: "Add a comment..." %><br>
        <%= button_tag "Send", class: "send-message", style: "display:none" %>
      <% end %>
    </div>
  </div>
</div>
